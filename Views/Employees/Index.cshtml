@model WebApp_MVC_AllTopics_with_WebGentle.Models.Employee

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        <h1>I am from Employees Index</h1>
        <div>
            <a href="/practice/AboutUs">Practice About Us</a> <br />
            <a href="/practice/Index">Practice Index</a>
        </div>
        <hr />
        <table>
            <tbody>
                <tr>
                    <td>ID:</td>
                    <td>@Model.Id</td>
                </tr>
                <tr>
                    <td>Name:</td>
                    <td>@Model.EmployeeName</td>
                </tr>
                <tr>
                    <td>Address :</td>
                    <td>@Model.Address</td>
                </tr>
            </tbody>
        </table>
        <hr />
        @* RAZOR VIEW ENGINE START HERE *@
        <div>
            @DateTime.Now;
        </div>
        <hr />
        <div>
            @{
                var a = 1;
                var b = 2;
                var ab = a + b;
                var currentTime = DateTime.Now;
                var tomorrowTime = DateTime.Now.AddDays(1);
                var colorList = new List<string>() { "Red", "Blue", "White", "Green", "Black" };
            }
            
        </div>
        <div>
            <label>Result :@ab</label><br />
            <label>Current Time :@currentTime</label><br />
            <label>Tomorrow Time :@tomorrowTime</label><br />
            <label>List :@colorList.FirstOrDefault()</label>
        </div>
    </div>
</body>
</html>
