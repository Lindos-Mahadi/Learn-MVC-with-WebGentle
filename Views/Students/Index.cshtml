@model WebApp_MVC_AllTopics_with_WebGentle.Models.Student

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        <h1>loosely binding Validation in MVC 5</h1>
        @using (Html.BeginForm("StudentModel", "Students", FormMethod.Post))
        {
            @Html.ValidationSummary()
            @*@Html.ValidationMessageFor(f => f.StudentName)*@ <!--strongly binding-->
            @Html.TextBoxFor(f => f.StudentName)
            <br />
            <br />
            @*@Html.ValidationMessageFor(l => l.Standard)*@ <!--strongly binding-->
            @Html.TextBoxFor(l => l.Standard)
            <br />
            <br />
            <input type="submit" value="submit" />
        }
    </div>
</body>
</html>
