@model WebApp_MVC_AllTopics_with_WebGentle.Models.Student

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        <h1>Pass Data using Parameters</h1>
        @using (Html.BeginForm("StudentName", "Students"))
        {
            <input type="text" name="firstName" />
            <br />
            <input type="text" name="lastName" />
            <br />
            <br />
            <input type="submit" value="submit" />
        }
        <br />
        <br />
        <h1>Pass Data using Request</h1>
        @using (Html.BeginForm("StudentNameRequst", "Students"))
        {
            <input type="text" name="firstName" /><br />

            <input type="text" name="lastName" />
            <br />
            <br />
            <input type="submit" value="submit" />
        }
        <br />
        <br />
        <h1>Pass Data using From</h1>
        @using (Html.BeginForm("StudentNameForm", "Students"))
        {
            <input type="text" name="firstName" />
            <br />
            <input type="text" name="lastName" />
            <br />
            <br />
            <input type="submit" value="submit" />
        }
        <br />
        <br />
        <h1>Pass Data using Model</h1>
        @using (Html.BeginForm("StudentModel", "Students"))
        {
            @Html.TextBoxFor(f => f.StudentName)
            <br />
            @Html.TextBoxFor(l => l.Standard)
            <br />
            <br />
            <input type="submit" value="submit" />
        }
    </div>
</body>
</html>
